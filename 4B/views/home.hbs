<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles.css">
</head>

<body class="bg-dark text-light">

  {{!-- <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">MLBB</a>
    <div class="collapse navbar-collapse">
      <div class="ml-auto">
        <a href="/addHero" class="btn btn-primary">Add Hero</a>
        <a href="/addType" class="btn btn-secondary">Add Type</a>
      </div>
    </div>
  </nav> --}}
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">MLBB Heroes</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        {{#if user}}
        <li class="nav-item">
          <a class="btn btn-primary" href="/addHero">Add Hero</a>
        </li>
        <li class="nav-item" style="padding-left: 10px; padding-right: 10px;">
          <a class="btn btn-secondary" href="/addType">Add Type</a>
        </li>
        <li class="nav-item">
          <form action="/logout" method="POST" class="form-inline">
            <button type="submit" class="btn btn-outline-light">Logout</button>
          </form>
        </li>
        {{else}}
        <li class="nav-item">
          <a class="nav-link" href="/login">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/register">Register</a>
        </li>
        {{/if}}
      </ul>
    </div>
  </nav>


  <div class="container mt-4">
    <div class="row">
      {{#each heroes}}
      <div class="col-md-3 mb-3">
        <div class="card bg-secondary text-white">
          <img src="{{this.photo}}" class="card-img-top" alt="{{this.hero_name}}">
          <div class="card-body">
            <h5 class="card-title">{{this.hero_name}}</h5>
            <p class="card-text">Type: {{this.hero_type}}</p>
            <a href="/detail/{{this.hero_name}}" class="btn btn-info">Detail</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="/script.js"></script>
</body>

</html>
